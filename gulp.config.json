{
	"webpackOptions": {
		"server": {
			"host": "localhost",
			"port": 8080,
			"protocol": "http",
			"hot": false
		},
		"compile": {
			"debug": true,
			"devtool": "#source-map"
		},
		"paths": {
			"contentBase": "build/"
		}
	},
	"bowerOptions": {
		"paths": {
			"dest": "./src/lib/"
		}
	},
	"paths": {
		"clean": "build",
		"root": {
			"src": ["src/*.*", "src/.*"],
			"dest": "build"
		},
		"images": {
			"src": ["src/img/**/*"],
			"dest": "build/img"
		},
		"assets": {
			"src": ["src/assets/**/*"],
			"dest": "build/assets"
		}
	}
}